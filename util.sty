%listings settings
\lstset{ 
  backgroundcolor=\color{white},   
  basicstyle=\ttfamily\footnotesize,        
  breakatwhitespace=false,
  breaklines=true,                 
  captionpos=t,                    
  commentstyle=\color{mygreen},    
  deletekeywords={...},            
  extendedchars=true,              
